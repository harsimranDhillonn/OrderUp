<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.UserAccountFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/userbg0"/>

        <TextView
            android:id="@+id/infoContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:text="Info"
            android:background="#55ffffff"/>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/backpack"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:text="backpack"
            android:textSize="30dp"
            android:layout_gravity="top|start"/>

        <Button
            android:id="@+id/redeemCardButton"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:text="Redeem"
            android:textSize="30dp"
            android:layout_gravity="top|end"/>

        <Button
            android:id="@+id/addCardButton"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:text="Add Credit Card"
            android:textSize="30dp"
            android:layout_gravity="center|start"/>

        <Button
            android:id="@+id/addAddressButton"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:text="Add address"
            android:textSize="30dp"
            android:layout_gravity="center|end"/>

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:text="Logout"
            android:textSize="30dp"
            android:layout_gravity="bottom|center"/>
    </FrameLayout>

    <TextView
        android:id="@+id/accountBalance"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="TextView"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:background="#55ffffff"/>


    <EditText
        android:id="@+id/giftCardCode"
        android:layout_width="208dp"
        android:layout_height="40dp"
        android:layout_marginStart="103dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        android:ems="10"
        android:hint="Enter Giftcard Code Here"
        android:inputType="number"
        android:maxLength="16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView3" />



    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="128dp"
        android:text="Account Balance: "
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/addCardButton"
        app:layout_constraintStart_toStartOf="@id/giftCardCode"
        app:layout_constraintTop_toTopOf="@id/firstNameInput" />

</LinearLayout>